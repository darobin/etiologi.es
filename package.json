{
  "name": "etiologies",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "async": "0.9.0",
    "babel": "^5.2.17",
    "babelify": "^6.1.0",
    "browserify": "^10.1.3",
    "clean-css": "2.1.8",
    "findit": "1.2.0",
    "fs-extra": "0.9.1",
    "myth": "^1.4.0",
    "nodemon": "1.3.7",
    "nopt": "2.2.1",
    "normalize.css": "^3.0.3",
    "randomcolor": "^0.2.0",
    "uglify-js": "^2.4.23",
    "watchify": "^3.2.1",
    "whacko": "0.13.2"
  },
  "scripts": {
    "build-tools": "babel ./tools-src --out-dir ./tools",
    "watch-tools": "nodemon -e js --watch ./tools-src/ --exec 'npm run build-tools'",

    "build-js-svg": "browserify ./client-src/leaves.js -o ./site/js/leaves.js && uglifyjs ./site/js/leaves.js -o ./site/js/leaves.min.js",
    "build-js": "npm run build-js-svg",
    "watch-js": "nodemon -e js --watch ./client-src/ --exec 'npm run build-js'",

    "build-site":   "node ./tools/build-site.js",
    "watch-site":   "nodemon -e js,css,html --watch ./tools/ --watch ./content/ --exec 'npm run build-site'",

    "build": "npm run build-tools && npm run build-js && npm run build-site",
    "watch": "npm run watch-tools & npm run watch-js & npm run watch-site"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
